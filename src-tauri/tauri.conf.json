{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "build": {
    "beforeBuildCommand": "pnpm run build",
    "beforeDevCommand": "pnpm run dev",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": true
  },
  "package": {
    "productName": "harana",
    "version": "0.1.0"
  },
  "tauri": {
    "systemTray": {
      "iconPath": "icons/32x32.png",
      "iconAsTemplate": true
    },
    "allowlist": {
      "fs": {
        "exists": true,
        "readDir": true,
        "readFile": true,
        "writeFile": false,
        "scope": [
          "**",
          "**/*"
        ]
      },
      "dialog": {
        "all": true
      },
      "globalShortcut": {
        "all": true
      },
      "http": {
        "all": true,
        "request": true
      },
      "path": {
        "all": true
      },
      "protocol": {
        "all": true,
        "asset": true,
        "assetScope": [
          "**",
          "**/*",
          "$APPDATA/appIcons/*",
          "$RESOURCE/assets/*",
          "$RESOURCE/assets/*/*",
          "$RESOURCE/assets/icons/connectors/*",
          "$RESOURCE/icons/connectors/*"
        ]
      },
      "window": {
        "all": true
      }
    },
    "bundle": {
      "active": true,
      "category": "Productivity",
      "copyright": "com.harana",
      "deb": {
        "depends": []
      },
      "externalBin": [],
      "identifier": "com.harana.search",
      "longDescription": "",
      "macOS": {
        "entitlements": null,
        "exceptionDomain": "",
        "frameworks": [],
        "providerShortName": null,
        "signingIdentity": null
      },
      "resources": [
        "assets/*",
        "assets/icons/connectors/*"
      ],
      "shortDescription": "",
      "targets": ["deb", "msi", "dmg", "updater"],
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": ""
      }
    },
    "macOSPrivateApi": false,
    "security": {
      "csp": "default-src harana: asset: ws: https://asset.localhost img-src: 'self'"
    },
    "updater": {
      "active": true,
      "endpoints": [
        "https://update.search.harana.com/{{target}}/{{arch}}/{{current_version}}"
      ],
      "dialog": true,
